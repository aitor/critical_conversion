{
  "manifest_version": 2,
  "name": "D&D Metric Converter",
  "version": "1.0.0",
  "description": "Converts imperial units to metric units on D&D websites",
  "permissions": [
    "storage",
    "activeTab",
    "*://*.dndbeyond.com/*",
    "*://*.roll20.net/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.dndbeyond.com/*",
        "*://*.roll20.net/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dnd-metric-converter@example.com"
    }
  }
}
